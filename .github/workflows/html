    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const toggleBtn = document.getElementById("theme-toggle");
            const toggleBtnText = document.getElementById("theme-toggle-btn");
            
            // Check for saved theme preference or use preferred color scheme
            const currentTheme = localStorage.getItem('theme') || 
                (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            
            // Set the initial theme
            if (currentTheme === 'dark') {
                document.body.classList.add('dark');
                toggleBtn.checked = true;
            }
            
            // Update button text based on theme
            updateButtonText();
            
            // Listen for toggle changes
            toggleBtn.addEventListener("change", () => {
                document.body.classList.toggle("dark");
                const isDark = document.body.classList.contains('dark');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                updateButtonText();
            });
            
            // Also listen for button click
            toggleBtnText.addEventListener('click', () => {
                toggleBtn.checked = !toggleBtn.checked;
                document.body.classList.toggle("dark");
                const isDark = document.body.classList.contains('dark');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                updateButtonText();
            });
            
            function updateButtonText() {
                const isDark = document.body.classList.contains('dark');
                toggleBtnText.textContent = isDark ? '☀️ Light Mode' : '🌙 Dark Mode';
            }
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
